<h1>Abonnements</h1>

<table class="table-auto">
  <thead>
    <tr>
      <th>Saison</th>
      <th>Nom</th>
      <th>Client</th>
      <th>Bénéficaire</th>
      <th>Montant</th>
      <th>Paiement</th>
    </tr>
  </thead>
  <tbody>

    <% @subscriptions.each do |subscription| %>
      <tr>
       <td>Du <%= l subscription.period.start_on %> -> <%= l subscription.period.finish_on %></td>
       <td><%= subscription.name %></td>
       <td><%= subscription.user.full_name %></td>
       <td>
        <% if subscription.subscribable_type == 'Period' %>
          Amap
        <% else %>
          <%= subscription.subscribable.producer.full_name %>
        <% end %>
       </td>
       <td><%= humanized_money_with_symbol subscription.price %></td>
       <td><%= subscription.payment.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
